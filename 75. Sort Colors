class Solution {
public:
    void sortColors(vector<int>& nums) {
        int start=0;
        int end=nums.size()-1;
        int current=0;
            while(current<=end){
                if (nums[current]==0){
                    
                    nums[current]=nums[start];
                    nums[start]=0;
                    start++;
                    current++;
                }
                else if (nums[current]==2){
                     nums[current]=nums[end];
                    nums[end]=2;
                    end--;
                }
                else{
                    current++;
                }
            }
        
    }
};
